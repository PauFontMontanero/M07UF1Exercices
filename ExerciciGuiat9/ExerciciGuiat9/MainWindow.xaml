<Window x:Class="ExerciciGuiat9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExerciciGuiat9"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="Nom:" Grid.Row="0" Grid.Column="0" Margin="5"/>
        <TextBox Name="NomTextBox" Grid.Row="0" Grid.Column="1" Margin="5"/>
        <Button Content="Enviar" Width="100" Height="30" HorizontalAlignment="Center" 
        VerticalAlignment="Bottom"/>
    </Grid>
</Window>
