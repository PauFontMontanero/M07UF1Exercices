<Window x:Class="ExerciciPractic3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExerciciPractic3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Name="CambiarLabel" Content="DISABLE!" Width="200" Margin="30" Height="30" Grid.Column="0" Grid.Row="0" Click="CambiarLabel_Click"/>
        <Button Name="Missatge" Content="MESSAGE!" Width="200" Margin="30" Height="30" Grid.Column="0" Grid.Row="1" Click="Missatge_Click"/>
        <Button Name="Reset" Content="RESET!" Width="200" Margin="30" Height="30" Grid.Column="1" Grid.Row="0" Click="Reset_Click"/>
        <Label Name="Label" Content="ACTIVE!" Grid.Row="1" Grid.Column="1" Margin="50"/>
    </Grid>
</Window>
